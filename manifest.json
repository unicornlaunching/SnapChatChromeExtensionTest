{
  "manifest_version": 2,
  "name": "Snapchat Filter Extension",
  "description": "This extension applies a Snapchat filter to the current active tab.",
  "version": "1.0.0",
  "permissions": ["activeTab"],
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
